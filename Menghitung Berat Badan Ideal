// Menghitung Berat Badan Ideal
#include <iostream>
using namespace std;

int
main ()
{
  string gender;		//Menampung type data karakter yaitu gender
  float tb, bb, bb_ideal;	//Menyatakan tinggi badan, berat badan, berat badan ideal berupa bentuk eksponensial

  cout << "Gender(L/P) \t\t: ";	//Meminta Jenis Kelamin
  cin >> gender;		//Menyimpan data gender

  cout << "Berat Badan (kg) \t: ";	//Meminta data berat badan
  cin >> bb;			//Menyimpan data berat badan

  cout << "Tinggi Badan (cm) \t: ";	//Meminta data tinggi badan
  cin >> tb;			//Menyimpan data tinggi badan

  if (gender == "L")
    {
      bb_ideal = (tb - 100) - ((tb - 100) * 0.1);	//Rumus perhitungan berat badan ideal pada laki-laki
    }
  else if (gender == "P")
    {
      bb_ideal = (tb - 100) - ((tb - 100) * 0.15);	//Rumus perhitungan berat badan ideal pada perempuan
    }
  else
    {
      cout << "Gender Salah";	// Menampilkan kata tersebut jika data gender pengguna selain L dan P
      bb_ideal = 0;		//Perhitungan 0 jika gender salah atau selain L dan P
    }

  if (bb_ideal != 0)
    {
      if (bb == bb_ideal)
	{			//Syarat statement dijalankan,berat badan sama dengan berat ideal
	  cout << "bb ideal \t\t: " << bb_ideal << " kg" << endl;	//Menampilkan berat badan ideal pengguna
	  cout << "Berat Badan Anda Ideal";	// Menampilkan kondisi tubuh pengguna
	}
      else if (bb > bb_ideal)
	{			//Syarat statement dijalankan, berat badan lebih dari berat ideal
	  cout << "bb ideal \t\t: " << bb_ideal << " kg" << endl;	//Menampilkan berat badan ideal pengguna
	  cout << "Berat Badan Anda Gemuk";	//Menampilkan kondisi tubuh pengguna
	}
      else
	{			//Syarat statement dijalankan, berat badan kurang dari berat ideal
	  cout << "bb ideal \t\t: " << bb_ideal << " kg" << endl;	//Menampilkan berat badan ideal pengguna
	  cout << "Berat Badan Anda Kurus";	//Menampilkan kondisi tubuh pengguna
	}
    }

  return 0;
}
